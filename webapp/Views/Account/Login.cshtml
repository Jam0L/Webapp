@model webapp.ViewModel.LoginViewModel;

@{
    Layout = "_Layout";
}

<form class="d-flex justify-content-center form-signup" method="post" asp-action="Login" asp-controller="Account">

      <div class="login-box">
        <div class="card">
          <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
      
            <form action="../../index3.html" method="post">
              <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
              </div>
              <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-8">
                  <div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                      Remember Me
                    </label>
                  </div>
                </div>
                <div class="d-flex justify-content-center col-4">
                  <button href="" type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
              </div>
              <p></p>
              
            </form>
           
          
            <div class="d-flex justify-content-center col-12">
              <a type="submit" style="margin-left:25px;height: 50px; width: 250px; border-radius:5px;"   href="~/account/register" class="text-center btn-primary "><p style="margin-up:56px;">Register a new membership</p></a>
            </div>
         
        </div>
      </div>
   </div>
    <p class="mt-5 mb-3 text-muted text-center">Â© @DateTimeOffset.Now.Year</p>

</form>